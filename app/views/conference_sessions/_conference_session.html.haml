.conference_session
  .time.meta
    = time_link(conference_session.start_time, format_time(conference_session))
  .location.meta
    = conference_session.location
  .summary
    = link_to( conference_session.summary, conference_session )
  .presenters.meta
    = conference_session.presenters
  .attendees.meta
    -# %image.person{ :src => '/images/person-green-24.png' }
    - unless conference_session.attendees.empty?
      .total
        = pluralize(conference_session.attendees.length, 'person')
        going
