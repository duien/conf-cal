%h1 Sessions for #{format_time(@conference_sessions.first, :include_day => true)}

- @conference_sessions.each do |session|
  .metadata
    .presenters.meta
      = session.presenters
    .location.meta
      = session.location
    .summary
      = session.summary
    .controls
      - if session.attendees.include?(current_user)
        %a.attendance.yes{ :href => '/' } I'm Going
      - else
        %a.attendance.no{ :href => '/' } Choose this session
  .details
    .description
      = simple_format session.description
    .attendees
      %ul
        - session.attendees.each do |attendee|
          %li #{attendee.name} (#{attendee.login})
      
